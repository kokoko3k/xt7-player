Public Sub ArrangeCpl(Optional NumButtonsCPL As Integer = 9)
 Dim ButtonWovr, ButtonHovr, PaddingOvr As Integer
 Dim TheObject As Object

 Dim cX As Integer = 0
 NumButtonsCPL = 0
 'fix bottom panel for high sized fonts
 '---------------------------------------------------------------------------
  ButtonWovr = 36 '36
  ButtonHovr = 36 '36
  PaddingOvr = 5 '5
  
  For Each theobject In ControlPanel.Children
    If theobject.visible Then
      theobject.w = ButtonWovr
      theobject.h = ButtonHovr
      theobject.x = cX 
      cX = theobject.x + theobject.w + PaddingOvr
      NumButtonsCPL += 1
    Endif
  Next
  'NumButtonsCPL -= 1
  ControlPanel.w = (ButtonWovr + PaddingOvr) * NumButtonsCPL
  ControlPanel.h = ButtonHovr
  SliderBox.h = CInt(ButtonHovr / 1.33)
