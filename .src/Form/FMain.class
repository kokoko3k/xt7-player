    mplayer.do_restart(mplayer.Media_FullPath_Playing, GetOptionsFromGui() & SetRightCache() & VmetersOptionsAndInitIfNeeded() & " " & cookieopts, False, False, newpos)
    
    aspectmenu.visible = Not (mplayer.AudioOnly Or fsform.fullscreen)
    mplayer.Renice(GeneralOptions.NiceLevelSpinBox.value)
    CorrectAreaAspect
    LogWindow.clearlogs()
    LogWindow.ShowLogs()
  Endif
  UpdateOverboostLevel()

