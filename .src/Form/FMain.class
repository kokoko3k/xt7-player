  If Menutitles.enabled Then
    For title = 1 To numtitles
      SubMenu = New Menu(Menutitles) As "MenuswitchTitle"
      SubMenu.name = "SubMenuTitle_" & Title
      Try Length = mplayer.FindTagValue("ID_DVD_TITLE_" & title & "_LENGTH")
