Function IsDupe(item As String, TheComboBox As ComboBox) As Boolean
  Dim j As Integer
  For j = 0 To TheComboBox.Count - 1
    If TheComboBox[j].text = item Then
      Return True
    Endif
  Next 'j
  Return False
End

