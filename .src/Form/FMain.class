  While i >= 0 'for every selected rows in playlistgrid
    If PlayListGrid.Rows[i].selected Then
      ClipboardRows.Add(MyPlaylist.SearchTable[i]) 'copy the row from searchtable
    Endif
    i = i - 1
  Wend
  
End

